modules = ["python-3.11", "nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Flask App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "eBay Integration Test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Etsy Integration Test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Google Shopping Integration Test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Recommendations"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Gift Options"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Referral Tests"

[[workflows.workflow]]
name = "Start Flask App"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 5000

[[workflows.workflow]]
name = "eBay Integration Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_ebay_integration.py"

[[workflows.workflow]]
name = "Etsy Integration Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_etsy_integration.py"

[[workflows.workflow]]
name = "Google Shopping Integration Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_google_shopping_integration.py"

[[workflows.workflow]]
name = "Test Recommendations"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m unittest test_recommendations.py"

[[workflows.workflow]]
name = "Test Gift Options"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_gift_options.py"

[[workflows.workflow]]
name = "Run Referral Tests"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m unittest test_referral.py"

[deployment]
run = ["sh", "-c", "python main.py"]

[[ports]]
localPort = 5000
externalPort = 80
